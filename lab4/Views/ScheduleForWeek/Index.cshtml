@using lab4.ViewModels
@model ScheduleForWeeksViewModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="data-search">
        @using (Html.BeginForm("Index", "ScheduleForWeek", FormMethod.Post))
        {
        <fieldset>
            Время начала: @Html.TextBox("StartTime", Model.ScheduleForWeekViewModel.StartTime)
            <input type="submit" value="Найти" />
        </fieldset>
        }
    </div>
    <div>
        Расписание
        <table>
            <tr>
                <td><a asp-controller="ScheduleForWeek" asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">Время начала</a></td>
                <td>Гости</td>
            </tr>
            @{
                foreach (ScheduleForWeek i in Model.PageViewModel)
                {
                    <tr>
                        <td>@i.StartTime</td>
                        <td>@i.GuestsEmployees</td>
                    </tr>
                }
            }
        </table>
        <div>
            <a asp-controller="ScheduleForWeek" asp-action="Index" asp-route-index="-1">
                <<
            </a>
            @(Model.PageNumber + 1)
            <a asp-controller="ScheduleForWeek" asp-action="Index" asp-route-index="1">
                >>
            </a>
        </div>
    </div>
</div>
